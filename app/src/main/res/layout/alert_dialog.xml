<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_for_alert">

    <EditText
        android:id="@+id/editTitele"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="20dp"
        android:textSize="24sp"
        android:hint="Название задачи"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:id="@+id/editTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTitele"
        android:layout_marginVertical="30dp"
        android:textSize="20sp"
        android:hint="Информация о задаче"
        android:layout_marginHorizontal="15dp"
        />

    <ImageButton
        android:id="@+id/buttonPosistiv"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="45dp"
        android:src="@drawable/ic_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTask"

        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:id="@+id/buttonNegativ"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="45dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTask"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>